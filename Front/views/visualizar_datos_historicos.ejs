        }
    </script>
    <script>
    const MES_NUM = {
        'Enero':1,'Febrero':2,'Marzo':3,'Abril':4,'Mayo':5,'Junio':6,
        'Julio':7,'Agosto':8,'Septiembre':9,'Octubre':10,'Noviembre':11,'Diciembre':12
    };
    const NUM_MES = ['','Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];

    async function editRecord(id) {
        try {
        const row = visualization.data.find(r => String(r.id) === String(id));
        if (!row) { visualization.showAlert('error','No se encontró el registro'); return; }

        document.getElementById('ed_id').value = id;
        document.getElementById('ed_anio').value = row.anio;
        document.getElementById('ed_mes').value = MES_NUM[row.mes] || 1;
        document.getElementById('ed_tipo').value = row.tipo_contrato;
        document.getElementById('ed_cantidad').value = row.cantidad_personal;

        document.getElementById('ed_alert').className = 'alert d-none';
        const modal = new bootstrap.Modal(document.getElementById('modalEditarDotacion'));
        modal.show();

        const onSave = async (e) => {
            e.preventDefault();
            const payload = {
            anio: parseInt(document.getElementById('ed_anio').value,10),
            mes: parseInt(document.getElementById('ed_mes').value,10),
            area: document.getElementById('ed_tipo').value.trim(),   
            cantidad: parseInt(document.getElementById('ed_cantidad').value,10)
            };

            try {
            const r = await fetch(`${URL_BASE}/historicos/dotacion/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type':'application/json' },
                body: JSON.stringify(payload)
            });
            const json = await r.json();
            if (!r.ok) throw new Error(json.message || 'Error al actualizar');

            row.anio = payload.anio;
            row.mes = NUM_MES[payload.mes] || row.mes;
            row.tipo_contrato = payload.area;
            row.cantidad_personal = payload.cantidad;

            visualization.dataTable
                .rows((idx, data) => String(data.id) === String(id))
                .every(function(){ this.data(row); });
            visualization.dataTable.draw(false);

            visualization.updateMetrics();
            visualization.showAlert('success', json.message || 'Registro actualizado');
            modal.hide();
            } catch (err) {
            const alert = document.getElementById('ed_alert');
            alert.className = 'alert alert-danger';
            alert.textContent = err.message;
            }
        };
        const btn = document.getElementById('btnGuardarEdicion');
        btn.replaceWith(btn.cloneNode(true));
        document.getElementById('btnGuardarEdicion').addEventListener('click', onSave);

        } catch (err) {
        visualization.showAlert('error', err.message);
        }
    }
