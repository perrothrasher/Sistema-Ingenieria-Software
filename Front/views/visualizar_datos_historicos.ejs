    <script>
        window.addEventListener('load', async () => {
            try {
                const response = await fetch('/api/perfil', {
                    method: 'GET',
                    credentials: 'include', 
                    headers: { 'Content-Type': 'application/json' }
                });

                if (!response.ok) {
                    const textoError = await response.text();
                    console.error("Error del servidor:", textoError);
                    console.warn("El sistema intentó desloguearte por el error de arriba.");
                    
                    window.location.href = 'login.html'; 
                    return;
                }
                const usuario = await response.json();
                if (usuario.nombre && usuario.apellido) {
                    const welcomeMsg = document.getElementById('welcomeMessage');
                    if(welcomeMsg) welcomeMsg.innerText = `${usuario.nombre} ${usuario.apellido}`;
                }
                if (typeof cargarMandantes === 'function') cargarMandantes();

            } catch (error) {
                console.error('Error:', error);
            }
        });

        function resetFilters() {
            // Limpiar los inputs visualmente
            document.getElementById('filterYear').value = "";
            document.getElementById('filterMonth').value = "";
            document.getElementById('filterContract').value = "";

            // Restaurar los datos originales
            visualization.filteredData = [...visualization.data];

            // Actualizar Tabla
            visualization.dataTable.clear().rows.add(visualization.filteredData).draw();

            // Actualizar Gráfico Mensual 
            const monthlyData = visualization.groupDataByMonth();
            visualization.monthlyChart.data.labels = monthlyData.labels;
            visualization.monthlyChart.data.datasets[0].data = monthlyData.dataFull;
            visualization.monthlyChart.data.datasets[1].data = monthlyData.dataPart;
            visualization.monthlyChart.update();
            
            // Actualizar Gráfico de Contratos
            const contractData = visualization.groupDataByContract();
            visualization.contractChart.data.labels = contractData.labels;
            visualization.contractChart.data.datasets[0].data = contractData.data;
            visualization.contractChart.update();

            // Actualizar Métricas 
            visualization.updateMetrics();
        }

        class HistoricalDataVisualization {
            constructor() {
                this.data = [];
                this.filteredData = [];
                this.monthlyChart = null;
                this.contractChart = null;
                this.dataTable = null;
                
                this.loadData();
            }
            async loadData() {
                try {
                    this.showLoading(true);
                    
                    // Llamada a la API para obtener datos históricos
                    const response = await fetch('/api/historicos/dotacion');
                    if (!response.ok) {
                        throw new Error('Error al cargar datos históricos');
                    }
                    
                    this.data = await response.json();
                    this.filteredData = [...this.data];
                    
                    // Inicializar componentes con datos reales
                    this.initializeFilters();
                    this.initializeCharts();
                    this.initializeDataTable();
                    this.updateMetrics();
                    
                } catch (error) {
                    console.error('Error cargando datos:', error);
                    this.showAlert('error', 'No se pudieron cargar los datos históricos');
                    // No usar loadSampleData como fallback
                    this.data = [];
                    this.filteredData = [];
                } finally {
                    this.showLoading(false);
                }
            }

            displayUserName() {
                const nombre = localStorage.getItem("nombre");
                const apellido = localStorage.getItem("apellido");
                if (nombre && apellido) {
                    document.getElementById('welcomeMessage').textContent = `${nombre} ${apellido}`;
                }
            }

            initializeFilters() {
                // Llenar filtro de años
                const years = [...new Set(this.data.map(item => item.anio))].sort((a, b) => b - a);
                const yearSelect = document.getElementById('filterYear');
                years.forEach(year => {
                    const option = document.createElement('option');
                    option.value = year;
                    option.textContent = year;
                    yearSelect.appendChild(option);
                });

                // Llenar filtro de tipos de contrato
                const contracts = [...new Set(this.data.map(item => item.tipo_contrato))];
                const contractSelect = document.getElementById('filterContract');
                contracts.forEach(contract => {
                    const option = document.createElement('option');
                    option.value = contract;
                    option.textContent = contract;
                    contractSelect.appendChild(option);
                });
            }

            async initializeCharts() {
                try {
                    
                    await new Promise(resolve => setTimeout(resolve, 200));
                    
                    this.createMonthlyChart();
                    
                    await new Promise(resolve => setTimeout(resolve, 100));
                    
                    this.createContractChart();
                } catch (error) {
                    console.error('Error al inicializar gráficos:', error);
                }
            }

            createMonthlyChart() {
                try {
                    const canvas = document.getElementById('monthlyChart');
                    if (!canvas) return;
                    
                    const ctx = canvas.getContext('2d');
                    
                    if (this.monthlyChart) {
                        this.monthlyChart.destroy();
                    }
                    
                    const monthlyData = this.groupDataByMonth();

                    this.monthlyChart = new Chart(ctx, {
                        type: 'bar', 
                        data: {
                            labels: monthlyData.labels,
                            datasets: [
                                {
                                    label: 'Full Time',
                                    data: monthlyData.dataFull,
                                    backgroundColor: 'rgba(54, 162, 235, 0.7)', 
                                    borderColor: 'rgba(54, 162, 235, 1)',
                                    borderWidth: 1,
                                    barPercentage: 0.6,
                                    categoryPercentage: 0.8
                                },
                                {
                                    label: 'Part Time',
                                    data: monthlyData.dataPart,
                                    backgroundColor: 'rgba(255, 99, 132, 0.7)',
                                    borderColor: 'rgba(255, 99, 132, 1)',
                                    borderWidth: 1,
                                    barPercentage: 0.6,
                                    categoryPercentage: 0.8
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: {
                                mode: 'index',
                                intersect: false,
                            },
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                tooltip: {
                                    callbacks: {
                                        footer: function(tooltipItems) {
                                            let total = 0;
                                            tooltipItems.forEach(function(tooltipItem) {
                                                total += tooltipItem.raw;
                                            });
                                            return 'Total: ' + total;
                                        }
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Cantidad de Personal'
                                    },
                                    stacked: false 
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Período'
                                    },
                                    stacked: false
                                }
                            }
                        }
                    });
                } catch (error) {
                    console.error('Error al crear gráfico mensual:', error);
                }
            }

            createContractChart() {
                try {
                    const canvas = document.getElementById('contractChart');
                    if (!canvas) {
                        console.error('Canvas contractChart no encontrado');
                        return;
                    }
                    
                    const ctx = canvas.getContext('2d');
                    
                    // Destruir gráfico existente si existe
                    if (this.contractChart) {
                        this.contractChart.destroy();
                    }
                    
                    // Agrupar datos por tipo de contrato
                    const contractData = this.groupDataByContract();
                    
                    this.contractChart = new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: contractData.labels,
                            datasets: [{
                                data: contractData.data,
                                backgroundColor: [
                                    '#FF6384',
                                    '#36A2EB',
                                    '#FFCE56',
                                    '#4BC0C0',
                                    '#9966FF'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: {
                                intersect: false,
                            },
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                }
                            },
                            // Prevenir scroll automático
                            onResize: function(chart, size) {
                                // No hacer nada al redimensionar
                            }
                        }
                    });
                } catch (error) {
                    console.error('Error al crear gráfico de contratos:', error);
                }
            }

            initializeDataTable() {
                this.dataTable = $('#dataTable').DataTable({
                    data: this.filteredData,
                    columns: [
                        { data: 'anio' },
                        { data: 'mes' },
                        { data: 'tipo_contrato' },
                        { data: 'cantidad_personal' },
                        { data: 'carga_horaria' },
                        { 
                            data: null,
                            render: function(data, type, row) {
                                return `
                                    <button class="btn btn-sm btn-outline-primary" onclick="viewDetails(${row.id})">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" onclick="editRecord(${row.id})">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                `;
                            }
                        }
                    ],
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                    },
                    responsive: true,
                    pageLength: 10,
                    order: [[0, 'desc'], [1, 'desc']]
                });
            }

            groupDataByMonth() {
                const grouped = {};
                
                this.filteredData.forEach(item => {
                    const key = `${item.anio}-${item.mes}`;
                    
                    if (!grouped[key]) {
                        grouped[key] = { fullTime: 0, partTime: 0 };
                    }
                    
                    const cantidad = parseInt(item.cantidad_personal) || 0;
                    const tipo = (item.tipo_contrato || '').toLowerCase();

                    if (tipo.includes('full') || tipo.includes('completo')) {
                        grouped[key].fullTime += cantidad;
                    } else {
                        grouped[key].partTime += cantidad;
                    }
                });

                const labels = Object.keys(grouped).sort((a, b) => {
                    const [anioA, mesA] = a.split('-');
                    const [anioB, mesB] = b.split('-');
                    
                    if (anioA !== anioB) return anioA - anioB;
                    return this.getMonthNumber(mesA) - this.getMonthNumber(mesB);
                });
                const dataFull = labels.map(label => grouped[label].fullTime);
                const dataPart = labels.map(label => grouped[label].partTime);

                return { labels, dataFull, dataPart };
            }

            groupDataByContract() {
                const grouped = {};
                
                this.filteredData.forEach(item => {
                    const key = item.tipo_contrato;
                    if (!grouped[key]) {
                        grouped[key] = 0;
                    }
                    grouped[key] += parseInt(item.cantidad_personal) || 0;
                });

                const labels = Object.keys(grouped);
                const data = labels.map(label => grouped[label]);

                return { labels, data };
            }

            updateMetrics() {
                const totalPersonal = this.filteredData.reduce((sum, item) => 
                    sum + (parseInt(item.cantidad_personal) || 0), 0);
                
                const averageHours = this.filteredData.length > 0 ? 
                    (this.filteredData.reduce((sum, item) => 
                        sum + (parseInt(item.carga_horaria) || 0), 0) / this.filteredData.length).toFixed(1) : 0;
                
                const totalRecords = this.filteredData.length;
                
                // Calcular crecimiento
                const growthRate = this.calculateGrowthRate();

                document.getElementById('totalPersonal').textContent = totalPersonal.toLocaleString();
                document.getElementById('averageHours').textContent = averageHours + 'h';
                document.getElementById('growthRate').textContent = growthRate + '%';
                document.getElementById('totalRecords').textContent = totalRecords;
            }

            calculateGrowthRate() {
                // Lógica simplificada para calcular crecimiento
                if (this.filteredData.length < 2) return '0.0';
                
                const sortedData = this.filteredData.sort((a, b) => {
                    if (a.anio !== b.anio) return a.anio - b.anio;
                    return this.getMonthNumber(a.mes) - this.getMonthNumber(b.mes);
                });
                
                const firstRecord = sortedData[0];
                const lastRecord = sortedData[sortedData.length - 1];
                
                const firstTotal = parseInt(firstRecord.cantidad_personal) || 0;
                const lastTotal = parseInt(lastRecord.cantidad_personal) || 0;
                
                if (firstTotal === 0) return '0.0';
                
                const growth = ((lastTotal - firstTotal) / firstTotal * 100);
                return growth.toFixed(1);
            }

            getMonthNumber(monthName) {
                const months = {
                    'Enero': 1, 'Febrero': 2, 'Marzo': 3, 'Abril': 4,
                    'Mayo': 5, 'Junio': 6, 'Julio': 7, 'Agosto': 8,
                    'Septiembre': 9, 'Octubre': 10, 'Noviembre': 11, 'Diciembre': 12
                };
                return months[monthName] || 0;
            }

            showLoading(show) {
                const spinner = document.querySelector('.loading-spinner');
                spinner.style.display = show ? 'block' : 'none';
            }

            showAlert(type, message) {
                const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                const alertHTML = `
                    <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                
                const container = document.querySelector('.container-fluid');
                container.insertAdjacentHTML('afterbegin', alertHTML);
                
                // Auto-remove after 5 seconds
                setTimeout(() => {
                    const alert = container.querySelector('.alert');
                    if (alert) alert.remove();
                }, 5000);
            }
        }

        // Funciones globales
        let visualization;
        let initialized = false;

        document.addEventListener('DOMContentLoaded', () => {
            if (!initialized) {
                initialized = true;
                visualization = new HistoricalDataVisualization();
            }
        });

        function applyFilters() {
            const year = document.getElementById('filterYear').value;
            const month = document.getElementById('filterMonth').value;
            const contract = document.getElementById('filterContract').value;

            visualization.filteredData = visualization.data.filter(item => {
                let matches = true;
                
                if (year && item.anio != year) matches = false;
                if (month && visualization.getMonthNumber(item.mes) != month) matches = false;
                if (contract && item.tipo_contrato !== contract) matches = false;
                
                return matches;
            });

            // Actualizar tabla
            visualization.dataTable.clear().rows.add(visualization.filteredData).draw();
            
            // Actualizar gráficos
            const monthlyData = visualization.groupDataByMonth();
            visualization.monthlyChart.data.labels = monthlyData.labels;
            visualization.monthlyChart.data.datasets[0].data = monthlyData.data;
            visualization.monthlyChart.update();
            
            const contractData = visualization.groupDataByContract();
            visualization.contractChart.data.labels = contractData.labels;
            visualization.contractChart.data.datasets[0].data = contractData.data;
            visualization.contractChart.update();
            
            // Actualizar métricas
            visualization.updateMetrics();
        }

        function refreshData() {
            visualization.loadData().then(() => {
                visualization.initializeFilters();
                applyFilters();
                visualization.showAlert('success', 'Datos actualizados correctamente');
            });
        }

        // Utilidad: nombre de archivo con fecha/hora
        function buildFilename(prefix, ext) {
            const pad = (n)=>String(n).padStart(2,'0');
            const d = new Date();
            const ts = `${d.getFullYear()}-${pad(d.getMonth()+1)}-${pad(d.getDate())}_${pad(d.getHours())}${pad(d.getMinutes())}`;
            return `${prefix}_${ts}.${ext}`;
        }

        // Toma los datos actualmente visibles en la tabla
        function getVisibleRows() {
            if (!visualization?.dataTable) return [];
            return visualization.dataTable.rows({ search: 'applied' }).data().toArray();
        }

        // =============== EXCEL ===============
        async function exportToExcel() {
            try {
            const rows = getVisibleRows();
            if (!rows.length) { visualization.showAlert('error', 'No hay datos para exportar'); return; }

            // Mapea columnas visibles a objetos
            const data = rows.map(r => ({
                'Año': r.anio,
                'Mes': r.mes,
                'Tipo de Contrato': r.tipo_contrato,
                'Cantidad Personal': r.cantidad_personal,
                'Carga Horaria': r.carga_horaria
            }));

            // Crea workbook/sheet
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.json_to_sheet(data);
            // Ancho de columnas (opcional)
            ws['!cols'] = [{wch:6},{wch:11},{wch:18},{wch:18},{wch:14}];
            XLSX.utils.book_append_sheet(wb, ws, 'Dotacion');

            XLSX.writeFile(wb, buildFilename('DatosHistoricos', 'xlsx'));
            visualization.showAlert('success', 'Archivo Excel generado correctamente');
            } catch (err) {
            console.error(err);
            visualization.showAlert('error', 'No se pudo exportar a Excel');
            }
        }

        // =============== PDF ===============
        async function exportToPDF() {
            try {
            const rows = getVisibleRows();
            if (!rows.length) { visualization.showAlert('error', 'No hay datos para exportar'); return; }

            // jsPDF en modo paisaje
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('landscape', 'pt', 'a4');
            const pageWidth = doc.internal.pageSize.getWidth();

            // Título
            doc.setFontSize(16);
            doc.text('Visualización de Datos Históricos - Dotación', 40, 40);

            // Inserta gráficos como imágenes (si están creados)
            let y = 60;
            try {
                if (visualization?.monthlyChart) {
                const img1 = visualization.monthlyChart.toBase64Image();
                doc.addImage(img1, 'PNG', 40, y, pageWidth - 80, 180);
                y += 190;
                }
                if (visualization?.contractChart) {
                const img2 = visualization.contractChart.toBase64Image();
                // Si no cabe, nueva página
                if (y + 180 > doc.internal.pageSize.getHeight() - 60) {
                    doc.addPage();
                    y = 40;
                }
                doc.addImage(img2, 'PNG', 40, y, 360, 180);
                y += 200;
                }
            } catch (e) {
                console.warn('No se pudieron incrustar gráficos en el PDF:', e);
            }

            // Si no cabe la tabla, nueva página
            if (y > doc.internal.pageSize.getHeight() - 160) {
                doc.addPage();
                y = 40;
            }

            // Tabla con autoTable
            const body = rows.map(r => [
                r.anio, r.mes, r.tipo_contrato, r.cantidad_personal, r.carga_horaria
            ]);
            doc.autoTable({
                startY: y,
                head: [['Año','Mes','Tipo de Contrato','Cantidad Personal','Carga Horaria']],
                body,
                styles: { fontSize: 9, cellPadding: 4 },
                headStyles: { fillColor: [52,58,64] }, // oscuro
                theme: 'striped'
            });

            doc.save(buildFilename('DatosHistoricos', 'pdf'));
            visualization.showAlert('success', 'Archivo PDF generado correctamente');
            } catch (err) {
            console.error(err);
            visualization.showAlert('error', 'No se pudo exportar a PDF');
            }
        }
