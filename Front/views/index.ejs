    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }
        .welcome-section {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 40px;
            margin-bottom: 40px;
            text-align: center;
        }
        
        .welcome-title {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        
        .action-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 25px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
            width: 100%;
            text-align: left;
        }
        
        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }
        
        /* Colores de las opcines */
        .action-card.primary {
            background: linear-gradient(135deg, #3f51b5 0%, #5c6bc0 100%);
            color: white;
        }
        
        .action-card.success {
            background: linear-gradient(135deg, #3f51b5 0%, #5c6bc0 100%);
            color: white;
        }
        
        .action-card.warning {
            background: linear-gradient(135deg, #3f51b5 0%, #5c6bc0 100%);
            color: white;
        }
        
        .action-card.info {
            background: linear-gradient(135deg, #764ba2 0%, #9575cd 100%);
            color: white;
        }
        
        .action-card.secondary {
            background: linear-gradient(135deg, #764ba2 0%, #9575cd 100%);
            color: #ffffff;
        }
        
        .action-card.dark {
            background: linear-gradient(135deg, #764ba2 0%, #9575cd 100%);
            color: white;
        }
        
        .action-card.orange {
            background: linear-gradient(135deg, #9fa8da 0%, #c5cae9 100%);
            color: rgb(0, 0, 0);
        }
        
        .action-card.prediction {
            background: linear-gradient(135deg, #9fa8da 0%, #c5cae9 100%);
            color: rgb(0, 0, 0);
        }
        
        .action-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            opacity: 0.9;
        }
        
        .action-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 8px;
        }
        
        .action-description {
            font-size: 0.9rem;
            opacity: 0.8;
            margin: 0;
        }
        
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }
        
        @keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(30px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
        
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
        }
        
        .stats-number {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .stats-label {
            font-size: 0.9rem;
            opacity: 0.8;
        }
    </style>
